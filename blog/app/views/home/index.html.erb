<%= link_to 'Lista de posts', controller: 'articles' %>
<% if current_user %>
    <%= link_to 'New article', new_article_path %>
<% end %>


<section id="home-content">

    <section id="last-recently-created" class="above-the-fold">
        <header>
            <h3 class="atf-title">Ãšltimos artigos</h3>
        </header>

        <section class="content-list">
            <ul>
                <% @last_articles.each do |article| %>
                    <li>
                        <article>
                            <%= link_to article_path(article) do %>
                                <header>
                                    <h1><%= article.title %></h1>
                                </header>
                                <span>
                                    <%= article.subtitle %>
                                </span>
                                <figure>
                                    <img
                                        src="<%= article.cover %>"
                                        width="300"
                                        height="300"
                                        alt="" />
                                    <figcaption>
                                    </figcaption>
                                </figure>
                            <% end %>
                        </article>
                    </li>
                <% end %>
            </ul>
        </section>
    </section>

    <section id="top-articles" class="above-the-fold">
        <header>
            <h3 class="atf-title">Mais acessados</h3>
        </header>
    </section>

    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
        <!-- Gustavo Pantuza - Blog - Home above the fold -->
        <ins class="adsbygoogle"
             style="display:block"
             data-ad-client="ca-pub-0498762804992593"
             data-ad-slot="2134563324"
             data-ad-format="auto"></ins>
        <script>
        (adsbygoogle = window.adsbygoogle || []).push({});
    </script>

    <section id="recommended-articles">
        <header>
            <h3 class="atf-title">Artigos recomendados</h3>
        </header>
    </section>

    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
        <!-- Gustavo Pantuza - Blog - Home bottom -->
        <ins class="adsbygoogle"
             style="display:block"
             data-ad-client="ca-pub-0498762804992593"
             data-ad-slot="3611296520"
             data-ad-format="auto"></ins>
        <script>
        (adsbygoogle = window.adsbygoogle || []).push({});
    </script>

</section>
