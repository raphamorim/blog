
<% content_for :title, "Blog sobre Ciência da computação - Gustavo Pantuza" %>
<% content_for :description, "Artigos sobre Ciência da computação em português com o objetivo de fortalecer a comunidade brasileira de tecnologia escritos por Gustavo Pantuza" %>
<% content_for :keywords, "Algoritmos, Estruturas de dados, Sistemas distribuídos, Sistemas operacionais, Redes, Banco de dados, Computação gráfica, Compiladores, Linguagens de programação, Algoritmos distribuídos, estatística, processamento massivo de dados, Big data, Inteligência artificial, Sistemas lógicos, hardware, Lógica, matemática discreta, software, engenharia de software, Circuitos eletrônicos" %>

<section id="home-content">

    <section id="last-recently-created" class="above-the-fold">
        <header class="home-list-title">
            <h3 class="atf-title">Últimos artigos</h3>
        </header>

        <section class="content-list">
            <ul class="left">
                <% @last_articles.each_with_index do |article, index| %>

                    <% if index == 2 or index == 4 or index == 6 %>
                        </ul>
                        <ul class="right">
                    <% end%>
                    <li>
                        <article>
                            <%= link_to article_path(article) do %>
                                <header>
                                    <h1><%= article.title %></h1>
                                </header>
                                <figure>
                                    <img
                                        src="<%= article.cover %>"
                                        width="180"
                                        height="180"
                                        alt="" />
                                    <figcaption>
                                    </figcaption>
                                </figure>
                                <span>
                                    <%= article.subtitle %>
                                </span>
                            <% end %>
                        </article>
                    </li>
                <% end %>
            </ul>
        </section>
    </section>

    <section id="top-articles" class="above-the-fold">
        <header>
            <h3 class="atf-title">Mais acessados</h3>
        </header>
        <section class="content-list">
            <ul class="left">
                <% @top_articles.each_with_index do |article, index| %>

                    <% if index == 2 or index == 4 or index == 6 %>
                        </ul>
                        <ul class="right">
                    <% end%>
                    <li>
                        <article>
                            <%= link_to article_path(article) do %>
                                <header>
                                    <h1><%= article.title %></h1>
                                </header>
                                <figure>
                                    <img
                                        src="<%= article.cover %>"
                                        width="180"
                                        height="180"
                                        alt="" />
                                    <figcaption>
                                    </figcaption>
                                </figure>
                                <span>
                                    <%= article.subtitle %>
                                </span>
                            <% end %>
                        </article>
                    </li>
                <% end %>
            </ul>
        </section>
    </section>

    <section class="home-pub-middle">
        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
            <!-- Gustavo Pantuza - Blog - Home above the fold -->
            <ins class="adsbygoogle"
                 style="display:block"
                 data-ad-client="ca-pub-0498762804992593"
                 data-ad-slot="2134563324"
                 data-ad-format="auto"></ins>
            <script>
            (adsbygoogle = window.adsbygoogle || []).push({});
        </script>
    </section>

    <section id="recommended-articles">
        <header class="recommended-header">
            <h3 class="atf-title">Artigos recomendados</h3>
        </header>
        <section class="content-list">
            <ul class="left">
                <% @recommended.each_with_index do |article, index| %>

                    <li>
                        <article>
                            <%= link_to article_path(article) do %>
                                <header>
                                    <h1><%= article.title %></h1>
                                </header>
                                <figure>
                                    <img
                                        src="<%= article.cover %>"
                                        width="180"
                                        height="180"
                                        alt="" />
                                    <figcaption>
                                    </figcaption>
                                </figure>
                            <% end %>
                        </article>
                    </li>
                <% end %>
            </ul>
        </section>
    </section>

    <section class="home-pub-bottom">
        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
            <!-- Gustavo Pantuza - Blog - Home bottom -->
            <ins class="adsbygoogle"
                 style="display:block"
                 data-ad-client="ca-pub-0498762804992593"
                 data-ad-slot="3611296520"
                 data-ad-format="auto"></ins>
            <script>
            (adsbygoogle = window.adsbygoogle || []).push({});
        </script>
    </section>

    <section id="recommended-tags">
        <header class="recommended-tags-header">
            <h3 class="atf-title">Assuntos recomendados</h3>
        </header>
        <section class="content-list home-recommended-tags">
            <ul class="left">
                <% @recommended.each do |article| %>

                    <% article.tags.each do |tag| %>
                        <li>
                            <span>
                                <%= link_to tag.name, tag_path(tag) %>
                            </span> .
                        </li>
                    <% end %>
                <% end %>
            </ul>
        </section>
    </section>
</section>
